        let tablaData = $("#tabla").DataTable({
        responsive: true,
        ordering: false,
        "ajax": {
            url: '@Url.Action("ListarUsuarios", "Home")',
            type: "GET",
            dataType: "json",
        },
        "columns": [
            { "data": "Nombre" },
            { "data": "Apellidos" },
            { "data": "Correo" },
            {
                "data": "Activo", "render": function (valor) {
                    if (valor) {
                        return '<span class="badge bg-success">Sí</span>';
                    } else {
                        return '<span class="badge bg-danger">No</span>';
                    }
                }
            },
            {
                "defaultContent": '<button type="button" class="btn btn-sm btn-warning"><i class="fas fa-pen"></i></button>' +
                    '<button type="button" class="btn btn-sm btn-danger ms-2"><i class="fas fa-trash"></i></button>',
                "orderable": false,
                "searchable": false,
                "width": "auto"
            }
        ]

    });


    </script>
}